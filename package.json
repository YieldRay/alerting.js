{
    "name": "alerting.js",
    "version": "0.1.0",
    "description": "implement alert, confirm, prompt with Promise",
    "main": "./dist/alerting.js",
    "scripts": {
        "dev:css": "sass --watch src:dist",
        "dev:js": "tsc -w",
        "build": "npm run build:scss && tsc && npm run build:rollup && npm run minify",
        "build:scss": "sass src:dist --no-source-map",
        "build:rollup": "rollup dist/alerting.js --file dist/alerting.umd.js --format umd  --name 'alerting'",
        "minify": "postcss dist/*.css -d ./dist --no-source-map && terser dist/alerting.umd.js -o dist/alerting.umd.min.js --compress ecma=2015,computed_props=false"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/YieldRay/alerting.js.git"
    },
    "keywords": [],
    "author": "YieldRay",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/YieldRay/alerting.js/issues"
    },
    "homepage": "https://github.com/YieldRay/alerting.js#readme",
    "devDependencies": {
        "autoprefixer": "^10.4.2",
        "cssnano": "^5.0.15",
        "postcss": "^8.4.5",
        "postcss-cli": "^9.1.0",
        "postcss-preset-env": "^7.2.0",
        "rollup": "^2.70.1",
        "sass": "^1.47.0",
        "terser": "^5.12.1",
        "typescript": "^4.6.3"
    }
}
